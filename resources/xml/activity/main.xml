<brls:AppletFrame
    iconInterpolation="linear"
    headerHidden="true"
    footerHidden="false">
    <brls:Box
        axis="column"
        width="100%"
        height="100%">
        <AutoTabFrame
                id="main/tabFrame"
                grow="1"
                tabBackgroundColor="@theme/color/grey_1"
                tabItemActiveTextColor="@theme/color/bilibili"
                defaultTab="0"
                sidebarPosition="left">

            <Tab label="首页"
                 fontSize="18"
                 icon="@res/svg/ico-home.svg"
                 iconActivate="@res/svg/ico-home-activate.svg">
                <HomeTab/>
            </Tab>

            <Tab label="动态"
                 fontSize="18"
                 icon="@res/svg/ico-dynamic.svg"
                 iconActivate="@res/svg/ico-dynamic-activate.svg">
                <DynamicTab/>
            </Tab>

            <Tab label="我的"
                 fontSize="18"
                 focusDown="main/setting"
                 icon="@res/svg/ico-mine.svg"
                 iconActivate="@res/svg/ico-mine-activate.svg">
                <MineTab />
            </Tab>
        </AutoTabFrame>
        <brls:Box
                wireframe="false"
                width="100"
                axis="column"
                justifyContent="center"
                alignItems="center"
                positionType="absolute"
                positionBottom="20">
                <CustomButton
                        id="main/setting"
                        focusable="true"
                        highlightCornerRadius="50"
                        wireframe="false">
                        <SVGImage
                                focusable="true"
                                width="48"
                                height="48"
                                SVG="@res/svg/ico-setting.svg"/>
                </CustomButton>
                <brls:Label
                        wireframe="false"
                        marginTop="4"
                        marginLeft="2"
                        textColor="#61666D"
                        horizontalAlign="center"
                        fontSize="12"
                        text=" /  "/>
        </brls:Box>
    </brls:Box>
</brls:AppletFrame>
