<brls:AppletFrame
        id="video/detail/frame"
        iconInterpolation="linear"
        headerHidden="true"
        footerHidden="false">
        <brls:Box
                width="auto"
                height="auto"
                grow="1.0"
                axis="row">

<!--                页面左侧-->
                <brls:Box
                        id="video_detail_left_box"
                        margin="10"
                        width="800"
                        height="auto"
                        wireframe="false"
                        axis="column">

                        <VideoView
                                id="video/detail/video"
                                width="800"
                                height="450"/>

<!--                        视频下方相关信息-->
                        <brls:Box
                                id="video_detail_info_box"
                                wireframe="false"
                                width="auto"
                                height="auto"
                                grow="1.0"
                                axis="column">

<!--                                视频标题-->
                                <brls:Label
                                        id="video_title"
                                        wireframe="false"
                                        width="auto"
                                        margin="10"
                                        focusable="true"
                                        fontSize="24"
                                        text="title"
                                        lineColor="#D0D0D0"
                                        lineBottom="1"
                                        singleLine="true"/>

                                <brls:Box
                                        id="video_detail_info_box"
                                        wireframe="false"
                                        width="100%"
                                        height="auto"
                                        grow="1.0"
                                        axis="row">
                                        <brls:Box
                                                width="50%"
                                                grow="1.0"
                                                alignItems="center"
                                                axis="column">
                                            <brls:Box
                                                    id="video_author_box"
                                                    width="100%"
                                                    height="50%"
                                                    focusable="true"
                                                    alignItems="center"
                                                    axis="row">

                                                <UserInfoView
                                                        wireframe="false"
                                                        id="video_author"
                                                        width="50%"
                                                        height="100%"/>
                                            </brls:Box>
                    <!--                            todo: 添加投币点赞一键等按钮-->
                                        </brls:Box>

                                        <brls:Box
                                                width="auto"
                                                height="50%"
                                                grow="1.0"
                                                marginLeft="@style/brls/highlight/shadow_offset"
                                                alignItems="center"
                                                axis="column">
                                            <TextBox
                                                    id="video_intro"
                                                    width="100%"
                                                    height="50%"
                                                    grow="1.0"
                                                    verticalAlign="top"
                                                    horizontalAlign="left"
                                                    focusable="true"
                                                    fontSize="10"
                                                    autoAnimate="false"
                                                    text="introduction" />
                                            <brls:Box
                                                    width="100%"
                                                    height="20%"
                                                    alignItems="center"
                                                    axis="column">
                                                <brls:Label
                                                        id="video_info"
                                                        singleLine="true"
                                                        width="auto"
                                                        height="auto"
                                                        horizontalAlign="center"
                                                        fontSize="10"
                                                        text="2022-01-01 20:00" />
                                            </brls:Box>
                                        </brls:Box>
                                </brls:Box>
                        </brls:Box>

                </brls:Box>

<!--                页面右侧-->
                <brls:Box
                        id="video_detail_right_box"
                        width="auto"
                        height="auto"
                        grow="1.0"
                        axis="column">
                    <AutoTabFrame
                            id="player/tab_frame"
                            grow="1"
                            width="100%"
                            height="100%"
                            tabBackgroundColor="@theme/color/grey_1"
                            defaultTab="0"
                            sidebarPosition="top">

                        <Tab label="评论"
                             fontSize="18">
                            <brls:Box
                                    width="100%"
                                    grow="1">
                                <RecyclingGrid
                                        id="video/comment/recyclingGrid"
                                        paddingLeft="20"
                                        paddingRight="20"
                                        grow="1"
                                        spanCount="1"
                                        itemHeight="250"
                                        wireframe="false"/>
                            </brls:Box>
                        </Tab>
                    </AutoTabFrame>

                </brls:Box>

        </brls:Box>

</brls:AppletFrame>