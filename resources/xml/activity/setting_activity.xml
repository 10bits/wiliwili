<brls:AppletFrame
        iconInterpolation="linear"
        headerHidden="true"
        footerHidden="false">
        <AutoTabFrame
                id="setting/tabFrame"
                grow="1"
                tabBackgroundColor="@theme/color/grey_1"
                tabItemActiveTextColor="@theme/color/bilibili"
                defaultTab="0"
                demandMode="false"
                sidebarWidth="200"
                sidebarPosition="left">

            <Tab label="应用设置"
                 fontSize="22">
                <brls:ScrollingFrame
                        width="auto"
                        height="auto"
                        grow="1.0" >

                <brls:Box
                        width="auto"
                        height="auto"
                        axis="column"
                        alignItems="stretch"
                        paddingLeft="@style/brls/tab_frame/content_padding_sides"
                        paddingRight="@style/brls/tab_frame/content_padding_sides"
                        paddingTop="@style/brls/tab_frame/content_padding_top_bottom"
                        paddingBottom="@style/brls/tab_frame/content_padding_top_bottom">
                    <brls:Header
                            width="auto"
                            height="auto"
                            title="播放设置"
                            marginBottom="0px" />
                    <brls:Box
                            width="100%"
                            height="auto"
                            axis="column"
                            marginBottom="30px">

                        <brls:BooleanCell
                                id="boolean"
                                title="详情页自动播放（不可用）"/>

                        <brls:BooleanCell
                                id="boolean"
                                title="播放器下方固定显示进度条（不可用）"/>

                        <brls:BooleanCell
                                id="boolean"
                                title="详情页自动全屏播放（不可用）"/>

                        <brls:BooleanCell
                                id="boolean"
                                title="记忆弹幕开关状态（不可用）"/>

                    </brls:Box>
                    <brls:Header
                            width="auto"
                            height="auto"
                            title="缓存设置"
                            marginBottom="0px" />
                    <brls:Box
                            width="100%"
                            height="auto"
                            axis="column"
                            marginBottom="30px">

                        <brls:RadioCell
                                id="radio"
                                title="清空本地图片缓存（不可用）"/>

                    </brls:Box>
                    <brls:Header
                            width="auto"
                            height="auto"
                            title="其他设置"
                            marginBottom="0px" />
                    <brls:Box
                            width="100%"
                            height="auto"
                            axis="column"
                            marginBottom="30px">

                        <brls:BooleanCell
                                id="cell/hideBottomBar"
                                title="隐藏下方提示栏"/>

                        <brls:BooleanCell
                                id="boolean"
                                title="配色跟随系统（不可用）"/>

                        <brls:BooleanCell
                                id="boolean"
                                title="不记录到历史播放记录（不可用）"/>

                        <brls:BooleanCell
                                id="boolean"
                                title="关闭时直接返回到桌面（不可用）"/>

                        <brls:SelectorCell
                                id="selector"
                                title="默认图片质量（不可用）"/>

                    </brls:Box>
                </brls:Box>
                </brls:ScrollingFrame>
            </Tab>

            <Tab label="实用工具"
                 fontSize="22">
                <brls:ScrollingFrame
                        width="auto"
                        height="auto"
                        grow="1.0" >

                <brls:Box
                        width="auto"
                        height="auto"
                        axis="column"
                        alignItems="stretch"
                        paddingLeft="@style/brls/tab_frame/content_padding_sides"
                        paddingRight="@style/brls/tab_frame/content_padding_sides"
                        paddingTop="@style/brls/tab_frame/content_padding_top_bottom"
                        paddingBottom="@style/brls/tab_frame/content_padding_top_bottom">
                    <brls:Header
                            width="auto"
                            height="auto"
                            title="使用教程"
                            marginBottom="0px" />
                    <brls:Box
                            width="100%"
                            height="auto"
                            axis="column"
                            marginBottom="30px">

                        <brls:RadioCell
                                id="tools/tutorial_open"
                                title="如何正确打开wiliwili"/>

                    </brls:Box>
                    <brls:Header
                            width="auto"
                            height="auto"
                            title="网络诊断（不可用）"
                            marginBottom="0px" />
                    <brls:Box
                            width="100%"
                            height="auto"
                            axis="column"
                            marginBottom="30px">

                        <brls:RadioCell
                                id="radio"
                                title="检测网络状态"/>

                    </brls:Box>
                    <brls:Header
                            width="auto"
                            height="auto"
                            title="其他（不可用）"
                            marginBottom="0px" />

                    <brls:RadioCell
                            id="radio"
                            title="检测更新"/>
                </brls:Box>
                </brls:ScrollingFrame>
            </Tab>

            <Tab label="关于更多"
                 fontSize="22">
                <brls:View xml="@res/xml/fragment/settings_about.xml" />
            </Tab>

            <Tab label="开源许可"
                 fontSize="22">
                <brls:Box
                        width="auto"
                        height="auto">

                    <brls:ScrollingFrame
                            width="auto"
                            height="auto"
                            grow="1.0" >

                        <brls:Box
                                width="auto"
                                height="auto"
                                axis="column"
                                wireframe="false"
                                paddingLeft="@style/brls/tab_frame/content_padding_sides"
                                paddingRight="@style/brls/tab_frame/content_padding_sides"
                                paddingTop="@style/brls/tab_frame/content_padding_top_bottom"
                                paddingBottom="@style/brls/tab_frame/content_padding_top_bottom">

                            <TextBox
                                    id="setting/label/opensource"
                                    width="auto"
                                    height="auto"
                                    lineHeight="1"
                                    marginBottom="10px" />

                        </brls:Box>

                    </brls:ScrollingFrame>

                </brls:Box>

            </Tab>

        </AutoTabFrame>
</brls:AppletFrame>
