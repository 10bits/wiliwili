<brls:Box
        width="auto"
        height="100%"
        grow="1.0"
        axis="column"
        marginLeft="8"
        alignItems="stretch">

    <brls:Box
            id="user_home/goto_userspace"
            height="150"
            backgroundColor="@theme/color/grey_1"
            focusable="true"
            hideHighlightBackground="true"
            marginTop="40"
            marginRight="20"
            marginLeft="20">
        <brls:Image
                id="mine/image/avatar"
                image="@res/icon/akari.jpg"/>
        <brls:Box
                marginLeft="40"
                wireframe="true"
                axis="column"
                width="25%">
            <brls:Label
                    id="mine/label/username"
                    grow="1"
                    text="点击登录"/>
            <brls:Label
                    grow="1"
                    text="B币：-    硬币：-"/>
        </brls:Box>
        <brls:Box
                wireframe="true"
                grow="1">
            <brls:Label
                    text="动态：-   关注：- 粉丝：-"/>
        </brls:Box>
    </brls:Box>

    <AutoTabFrame
            id="mine/tab/frame"
            grow="1"
            defaultTab="0"
            tabHeight="65"
            tabFontSize="16"
            tabItemActiveTextColor="@theme/color/bilibili"
            sidebarPosition="top">

        <Tab label="历史记录"
             fontSize="18">
            <MineHistory id="mine/history"/>
        </Tab>

        <Tab label="我的收藏"
             fontSize="18">
            <MineCollection id="mine/collection"/>
        </Tab>

    </AutoTabFrame>


</brls:Box>