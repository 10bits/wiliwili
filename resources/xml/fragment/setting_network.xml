<brls:Box
        axis="column"
        width="auto"
        margin="40"
        height="auto">
    <brls:Header
            title="访问网络"
            marginBottom="20"/>
    <brls:Box
            marginLeft="20"
            marginRight="20">
        <brls:Label
                grow="1"
                text="测试获取首页推荐"/>
        <brls:Label
                id="setting/net/test1"
                horizontalAlign="right"
                text="..."/>
    </brls:Box>
    <brls:Header
            title="系统时间"
            subtitle="系统时间不正确可能会导致网络访问失败"
            marginTop="20"
            marginBottom="20"/>
    <brls:Box
            marginBottom="20"
            marginLeft="20"
            marginRight="20">
        <brls:Label
                grow="1"
                text="当前系统时间"/>
        <brls:Label
                id="setting/net/sysTime"
                horizontalAlign="right"
                text="0000-00-00 00:00:00"/>
    </brls:Box>
    <brls:Box
            marginLeft="20"
            marginBottom="20"
            marginRight="20">
        <brls:Label
                grow="1"
                text="获取网络时间"/>
        <brls:Label
                id="setting/net/netTime"
                horizontalAlign="right"
                text="0000-00-00 00:00:00"/>
    </brls:Box>

    <brls:Header
            title="网络设置"
            subtitle="若无法访问网络，可尝试还原系统网络设定"
            marginBottom="20"
            marginTop="20"/>
    <brls:Box
            marginBottom="20"
            marginLeft="20"
            marginRight="20">
        <brls:Label
                grow="1"
                text="WIFI"/>
        <brls:Label
                id="setting/net/wifi"
                horizontalAlign="right"
                text="开"/>
    </brls:Box>
    <brls:Box
            marginBottom="20"
            marginLeft="20"
            marginRight="20">
        <brls:Label
                grow="1"
                text="IP地址"/>
        <brls:Label
                id="setting/net/ip"
                horizontalAlign="right"
                text="-.-.-.-"/>
    </brls:Box>
    <brls:Box
            alignItems="flexStart"
            marginLeft="20"
            marginRight="20">
        <brls:Label
                grow="1"
                text="DNS服务器地址"/>
        <brls:Label
                id="setting/net/dns"
                horizontalAlign="right"
                text="-.-.-.-"/>
    </brls:Box>

</brls:Box>