<brls:Box
        wireframe="false"
        axis="column"
        width="auto"
        height="auto">
    <AutoTabFrame
            demandMode="false"
            id="search/tab/frame"
            grow="1"
            defaultTab="1"
            tabHeight="65"
            tabFontSize="16"
            tabItemActiveTextColor="@theme/color/bilibili"
            sidebarPosition="top">

        <Tab label="热搜"
             fontSize="18">
            <SearchHots id="search/tab/hots"/>
        </Tab>

        <Tab label="视频"
             fontSize="18">
            <SearchVideo id="search/tab/video"/>
        </Tab>

        <Tab label="番剧"
             fontSize="18">
            <SearchBangumi id="search/tab/bangumi"/>
        </Tab>

        <Tab label="影视"
             fontSize="18">
            <SearchCinema id="search/tab/cinema"/>
        </Tab>

    </AutoTabFrame>

</brls:Box>