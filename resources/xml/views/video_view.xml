<brls:Box
        width="100%"
        height="100%"
        axis="column"
        justifyContent="spaceBetween"
        alignItems="center">

    <brls:Box
            id="video/osd/top/box"
            width="100%"
            height="80"
            backgroundStartColor="#000000CC"
            backgroundEndColor="#00000000"
            background="vertical_linear">
        <brls:Label
                id="video/osd/title"
                height="100%"
                marginLeft="20"
                marginRight="20"
                textColor="#FFFFFF"/>
        <brls:Box
                wireframe="false"
                positionBottom="0"
                positionLeft="20"
                positionType="absolute"
                alignItems="center">
            <SVGImage
                    width="16"
                    height="16"
                    SVG="@res/svg/widget-people.svg"/>
            <brls:Label
                    marginLeft="8"
                    textColor="#FFFFFF"
                    id="video/view/label/people"
                    fontSize="13"
                    text="N人正在看"/>
        </brls:Box>
    </brls:Box>

    <brls:Box
            axis="column"
            alignItems="center"
            id="video/osd/center/box">
        <brls:ProgressSpinner
                id="video/osd/loading"
                width="100"
                height="100"/>
        <brls:Label
                id="video/osd/center/label"
                visibility="invisible"
                cornerRadius="4"
                backgroundColor="#303030A0"
                textColor="#FFFFFF"
                fontSize="16"
                horizontalAlign="center"
                verticalAlign="center"/>
    </brls:Box>


    <brls:Box
            id="video/osd/bottom/box"
            width="100%"
            height="120"
            alignItems="center"
            axis="row"
            background="vertical_linear">
        <brls:Box
                wireframe="false"
                id="video/osd/toggle"
                alignItems="center"
                justifyContent="center"
                height="120"
                width="120">
            <SVGImage
                    id="video/osd/toggle/icon"
                    wireframe="false"
                    height="100"
                    width="100"
                    SVG="@res/svg/bpx-svg-sprite-play.svg"/>
        </brls:Box>
        <brls:Box
                width="auto"
                grow="1"
                height="120"
                alignItems="center"
                axis="column">
            <VideoProgressSlider
                    wireframe="false"
                    focusable="false"
                    marginTop="30"
                    id="video/osd/bottom/progress"
                    width="100%"
                    height="20"
                    grow="1"/>
            <brls:Box
                    width="100%"
                    alignItems="center"
                    grow="1">
                <brls:Label
                        wireframe="false"
                        horizontalAlign="right"
                        id="video/left/status"
                        height="100%"
                        width="100"
                        textColor="#FFFFFF"
                        text="00:00"/>
                <brls:Label
                        horizontalAlign="center"
                        height="100%"
                        textColor="#FFFFFF"
                        text="/"/>
                <brls:Label
                        wireframe="false"
                        horizontalAlign="left"
                        id="video/right/status"
                        height="100%"
                        width="100"
                        textColor="#FFFFFF"
                        text="00:00"/>
                <brls:Box
                        wireframe="false"
                        id="video/osd/danmaku"
                        positionType="absolute"
                        positionRight="100"
                        alignItems="center"
                        justifyContent="center"
                        height="60"
                        width="60">
                    <SVGImage
                            id="video/osd/danmaku/icon"
                            wireframe="false"
                            height="30"
                            width="30"
                            SVG="@res/svg/bpx-svg-sprite-danmu-switch-on.svg"/>
                </brls:Box>
                <brls:Box
                        wireframe="false"
                        id="video/osd/fullscreen"
                        positionType="absolute"
                        positionRight="20"
                        alignItems="center"
                        justifyContent="center"
                        height="60"
                        width="60">
                    <SVGImage
                            id="video/osd/fullscreen/icon"
                            wireframe="false"
                            height="30"
                            width="30"
                            SVG="@res/svg/bpx-svg-sprite-fullscreen.svg"/>
                </brls:Box>
            </brls:Box>
        </brls:Box>
    </brls:Box>

</brls:Box>