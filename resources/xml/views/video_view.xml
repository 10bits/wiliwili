<brls:Box
        width="100%"
        height="auto"
        axis="column"
        justifyContent="spaceBetween"
        alignItems="center">

    <brls:Box
            id="video/osd/top/box"
            width="100%"
            height="80"
            backgroundStartColor="#000000CC"
            backgroundEndColor="#00000000"
            background="vertical_linear">
        <brls:Label
                id="video/osd/title"
                width="100%"
                height="100%"
                marginLeft="40"
                textColor="#FFFFFF"
                text="video title"/>
        <brls:Box
                wireframe="false"
                positionBottom="0"
                positionLeft="40"
                positionType="absolute"
                alignItems="center">
            <SVGImage
                    width="16"
                    height="16"
                    SVG="@res/svg/widget-people.svg"/>
            <brls:Label
                    marginLeft="8"
                    textColor="#FFFFFF"
                    id="video/view/label/people"
                    fontSize="13"
                    text="N人正在看"/>
        </brls:Box>
    </brls:Box>

    <brls:ProgressSpinner
            id="video/osd/loading"
            width="100"
            height="100"/>


    <brls:Box
            id="video/osd/bottom/box"
            width="100%"
            height="120"
            alignItems="center"
            axis="column"
            background="vertical_linear">
        <VideoProgressSlider
                wireframe="true"
                focusable="false"
                id="video/osd/bottom/progress"
                width="96%"
                height="40"
                grow="1"/>
        <brls:Box
                width="100%"
                alignItems="center"
                grow="1">
                <brls:Image
                        id="video/osd/toggle"
                        wireframe="true"
                        marginLeft="20"
                        height="60"
                        width="60"
                        image="@res/pictures/icon-eye.png"/>
                <brls:Label
                        wireframe="true"
                        horizontalAlign="right"
                        id="video/left/status"
                        height="100%"
                        width="12%"
                        textColor="#FFFFFF"
                        text="00:00"/>
                <brls:Label
                        horizontalAlign="center"
                        height="100%"
                        textColor="#FFFFFF"
                        text="/"/>
                <brls:Label
                        wireframe="true"
                        horizontalAlign="left"
                        id="video/right/status"
                        height="100%"
                        width="12%"
                        textColor="#FFFFFF"
                        text="00:00"/>
                <brls:Box
                        id="video/osd/fullscreen"
                        positionType="absolute"
                        positionRight="20"
                        marginLeft="20"
                        height="30"
                        width="30">
                        <brls:Image
                                wireframe="true"
                                height="30"
                                width="30"
                                image="@res/pictures/icon-eye.png"/>
                </brls:Box>
        </brls:Box>
    </brls:Box>

</brls:Box>