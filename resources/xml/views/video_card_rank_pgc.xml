<brls:Box
        wireframe="false"
        highlightCornerRadius="8"
        axis="column"
        width="auto"
        height="auto">
    <brls:Box
            wireframe="false"
            id="video/card/pic_box"
            height="70%">
        <brls:Image
                wireframe="false"
                id="video/card/picture"
                scalingType="fill"
                width="100%"
                cornerRadius="4"/>

        <brls:Label
                id="video/card/label/index"
                horizontalAlign="center"
                detachedX="0"
                height="24"
                fontSize="18"
                textColor="#FFFFFF"
                text="01"/>

        <SVGImage
                id="video/card/svg/index"
                detachedX="0"
                width="43"
                height="24"
                SVG="@res/svg/rate-crown-iron.svg"/>

        <brls:Box
                positionBottom="0"
                positionType="absolute"
                backgroundColor="#303030A0"
                paddingLeft="10"
                paddingRight="10"
                width="100%"
                height="20%"
                alignItems="center">
            <SVGImage
                    width="16"
                    height="16"
                    SVG="@res/svg/widget-video-play-count.svg"/>
            <brls:Label
                    marginLeft="4"
                    marginRight="4"
                    textColor="#FFFFFF"
                    id="video/card/label/count"
                    fontSize="13"
                    text=""/>
            <SVGImage
                    width="16"
                    height="16"
                    SVG="@res/svg/widget-video-danmaku.svg"/>
            <brls:Label
                    marginLeft="4"
                    id="video/card/label/danmaku"
                    textColor="#FFFFFF"
                    fontSize="13"
                    text=""/>
            <brls:Label
                    id="video/card/label/duration"
                    positionType="absolute"
                    positionRight="0"
                    textColor="#FFFFFF"
                    fontSize="13"
                    text="时长：13:14"/>
        </brls:Box>

    </brls:Box>
    <brls:Box
            wireframe="false"
            margin="10"
            axis="column">
        <TextBox
                marginBottom="0"
                wireframe="false"
                id="video/card/label/title"
                fontSize="20"
                lineHeight="1.5"
                width="100%"
                height="30"/>
        <brls:Box
                grow="1"
                width="100%"
                alignItems="center">
            <SVGImage
                    width="14"
                    height="11"
                    SVG="@res/svg/widget-up.svg"/>
            <brls:Label
                    wireframe="false"
                    id="video/card/label/username"
                    marginLeft="4"
                    fontSize="16"
                    singleLine="true"
                    textColor="#9499A0"
                    width="100%"
                    height="100%"/>
        </brls:Box>
    </brls:Box>
</brls:Box>