<brls:Box
        wireframe="false"
        highlightCornerRadius="8"
        axis="column"
        width="auto"
        height="auto">
    <brls:Box
            id="video/card/pic_box"
            width="100%"
            height="60%">
        <brls:Image
                id="video/card/picture"
                scalingType="fill"
                height="100%"
                width="100%"
                cornerRadius="4"/>

        <brls:Box
                positionType="absolute"
                positionTop="8"
                positionRight="0"
                marginRight="8"
                cornerRadius="4"
                paddingLeft="4"
                paddingRight="4"
                backgroundColor="#303030A0">
        <brls:Label
                id="video/card/label/badge/right/top"
                textColor="#FFFFFF"
                fontSize="13"
                horizontalAlign="center"
                text="已看完"/>
        </brls:Box>

        <brls:Box
                positionBottom="0"
                positionType="absolute"
                background="vertical_linear"
                paddingLeft="10"
                paddingRight="10"
                width="100%"
                height="20%"
                alignItems="center">
            <SVGImage
                    width="16"
                    height="16"
                    SVG="@res/svg/widget-video-play-count.svg"/>
            <brls:Label
                    marginLeft="4"
                    marginRight="4"
                    textColor="#FFFFFF"
                    id="video/card/label/count"
                    fontSize="13"
                    text=""/>
            <brls:Label
                    id="video/card/label/duration"
                    positionType="absolute"
                    positionRight="0"
                    textColor="#FFFFFF"
                    fontSize="13"
                    text="时长：13:14"/>
        </brls:Box>

    </brls:Box>
    <brls:Box
            margin="10"
            axis="column">
        <TextBox
                marginBottom="0"
                wireframe="false"
                id="video/card/label/title"
                fontSize="20"
                lineHeight="1.5"
                width="100%"
                height="60"/>
        <brls:Box
                grow="1"
                width="100%"
                alignItems="center">
            <SVGImage
                    width="14"
                    height="11"
                    SVG="@res/svg/widget-up.svg"/>
            <brls:Label
                    id="video/card/label/username"
                    marginLeft="4"
                    fontSize="16"
                    singleLine="true"
                    textColor="#9499A0"
                    width="100%"
                    height="100%"/>
        </brls:Box>
    </brls:Box>
</brls:Box>