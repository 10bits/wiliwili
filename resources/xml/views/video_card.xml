<brls:Box
        axis="column"
        width="auto"
        height="auto">
    <brls:Box
            width="100%"
            height="54%">
        <NetImage
                id="video/card/picture"
                scalingType="fill"
                width="100%"
                marginBottom="10"
                height="100%"/>
        <brls:Box
                positionBottom="0"
                positionType="absolute"
                backgroundColor="#303030A0"
                paddingLeft="10"
                paddingRight="10"
                width="100%"
                height="20%">
            <brls:Label
                    id="video/card/label/count"
                    fontSize="12"
                    text="播放：12万"/>
            <brls:Label
                    id="video/card/label/danmaku"
                    fontSize="12"
                    text="弹幕：1223"/>
            <brls:Label
                    id="video/card/label/duration"
                    horizontalAlign="right"
                    grow="1"
                    fontSize="12"
                    text="时长：13:14"/>
        </brls:Box>

    </brls:Box>
    <brls:Box
            margin="10"
            axis="column">
        <TextBox
                marginBottom="10"
                wireframe="false"
                id="video/card/label/title"
                fontSize="18"
                width="100%"
                height="60"/>
        <brls:Label
                wireframe="false"
                id="video/card/label/username"
                fontSize="14"
                singleLine="true"
                textColor="#9499A0"
                width="100%"
                height="10%"/>
    </brls:Box>
</brls:Box>