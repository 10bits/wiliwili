<brls:Box
        wireframe="false"
        highlightCornerRadius="8"
        axis="column"
        width="auto"
        height="auto">
    <brls:Box
            id="video/card/pic_box"
            width="100%"
            height="60%">
        <brls:Image
                id="video/card/picture"
                backgroundColor="@theme/color/grey_1"
                scalingType="fill"
                height="100%"
                width="100%"
                cornerRadius="4"/>

        <brls:Box
                positionBottom="0"
                positionType="absolute"
                background="vertical_linear"
                paddingLeft="10"
                paddingRight="10"
                width="100%"
                height="20%"
                alignItems="center">
            <SVGImage
                    width="16"
                    height="16"
                    SVG="@res/svg/widget-video-play-count.svg"/>
            <brls:Label
                    marginLeft="4"
                    marginRight="4"
                    textColor="#FFFFFF"
                    id="video/card/label/count"
                    fontSize="13"
                    text=""/>
            <SVGImage
                    width="16"
                    height="16"
                    SVG="@res/svg/widget-video-danmaku.svg"/>
            <brls:Label
                    marginLeft="4"
                    id="video/card/label/danmaku"
                    textColor="#FFFFFF"
                    fontSize="13"
                    text=""/>
            <brls:Label
                    id="video/card/label/duration"
                    positionType="absolute"
                    positionRight="0"
                    textColor="#FFFFFF"
                    fontSize="13"
                    text="时长：13:14"/>
        </brls:Box>

    </brls:Box>
    <brls:Box
            margin="10"
            axis="column">
        <TextBox
                marginBottom="0"
                wireframe="false"
                id="video/card/label/title"
                fontSize="20"
                lineHeight="1.5"
                width="100%"
                height="60"/>
        <brls:Box
                grow="1"
                width="100%"
                alignItems="center">
            <SVGImage
                    width="14"
                    height="11"
                    SVG="@res/svg/widget-up.svg"/>
            <brls:Label
                    wireframe="false"
                    id="video/card/label/username"
                    marginLeft="4"
                    fontSize="16"
                    singleLine="true"
                    textColor="@theme/font/grey"
                    width="100%"
                    height="100%"/>
        </brls:Box>
        <brls:Box
                id="video/card/rcmd_box"
                visibility="gone"
                marginTop="10"
                height="20"
                backgroundColor="@theme/color/grey_1"
                cornerRadius="4"
                alignItems="center">
            <brls:Image
                    marginLeft="10"
                    marginRight="4"
                    width="12"
                    height="12"
                    image="@res/pictures/icon-quotation.png"/>

            <brls:Label
                    wireframe="false"
                    id="video/card/label/rcmd"
                    fontSize="13"
                    singleLine="true"
                    text="RCMD reason"
                    textColor="@theme/font/grey"/>
        </brls:Box>
        <brls:Box
                id="video/card/achievement_box"
                visibility="gone"
                marginTop="10"
                height="20"
                backgroundColor="@theme/color/yellow_1"
                cornerRadius="4"
                alignItems="center">
            <brls:Image
                    marginLeft="10"
                    marginRight="4"
                    width="12"
                    height="12"
                    image="@res/pictures/icon-history.png"/>

            <brls:Label
                    wireframe="false"
                    id="video/card/label/achievement"
                    fontSize="13"
                    singleLine="true"
                    text="explain"
                    textColor="@theme/font/yellow_1"/>
        </brls:Box>
    </brls:Box>
</brls:Box>